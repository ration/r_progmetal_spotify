# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-local-dev-key-change-in-production

# Database Configuration
# Leave empty or comment out to use SQLite (default for tests and local dev)
# Set DATABASE_URL to use PostgreSQL (recommended for production-like development)
#
# Local PostgreSQL (native):
# DATABASE_URL=postgresql://progmetal:progmetal@localhost:5432/progmetal
#
# Docker PostgreSQL (via docker-compose):
# DATABASE_URL=postgresql://progmetal:progmetal_dev_password@localhost:5432/progmetal
#
# Production PostgreSQL:
# DATABASE_URL=postgresql://user:password@prod-host:5432/progmetal
